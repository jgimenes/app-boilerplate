// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AdminAccount {
  id               String            @id @default(ulid())
  name             String
  email            String            @unique
  phone            String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  deletedAt        DateTime?
  AdminAccountAuth AdminAccountAuth?

  @@map("admin_accounts")
}

model AdminAccountAuth {
  adminAccountId        String    @id
  otp                   String?
  otpExpiresAt          DateTime?
  accessToken           String?
  accessTokenExpiresAt  DateTime?
  refreshToken          String?
  refreshTokenExpiresAt DateTime?
  jti                   String?
  jtiExpiresAt          DateTime?
  provider              String?
  providerId            String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  adminAccount AdminAccount @relation(fields: [adminAccountId], references: [id], onDelete: Cascade)

  @@map("admin_account_authentication")
}
